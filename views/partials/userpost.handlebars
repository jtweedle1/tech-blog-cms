<div class="card">
  <div class="card-body">
    <div class="flex-center">
    <h5 class="card-title">{{title}} by {{user.username}}</h5>
    <p class="card-text">{{{ cut content }}} ...</p>
    </div>
    <br>
    <div class="post-button-div" class="row">
        <div class="col align-self-center"><a href="/posts/{{id}}" class="btn btn-primary">Read More</a></div>
        <div class="col align-self-end">
          <a href="/posts/{{id}}/edit"><img id="edit-button" src="https://img.icons8.com/pastel-glyph/256/edit.png"></a>
           <a href="/posts/{{id}}/delete"><img id="edit-button" src="https://img.icons8.com/ios/256/delete-trash.png"></a>
          </div>
    </div>
  </div>
</div>

